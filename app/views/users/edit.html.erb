<div class="container">
  <div class="row">
    <%= form_for @user do |f| %>
      <div class="form-horizontal">
        <div class="form-group">
          <div class="col-xs-3">
            <%= f.label :last_name, "名前" , class: "control-label" %>
          </div>
            (姓)<%= f.text_field :last_name,class: "name" %>
            （名）<%= f.text_field :first_name %>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
            <%= f.label :last_name_kana, "フリガナ" , class: "control-label" %>
          </div>
            <span>(セイ)</span> <%= f.text_field :last_name_kana %>
                 （メイ）<%= f.text_field :first_name_kana %>
          </div>

        <div class="form-group">
          <div class="col-xs-3">
            <%= f.label :email, "メールアドレス", class: "control-label" %>
          </div>
            <%= f.email_field :email%>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
            <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "control-label" %>
          </div>
            <%= f.text_field :postal_code %>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
            <%= f.label :address, "住所", class: "control-label" %>
          </div>
            <%= f.text_field :address,class: "col-xs-4"  %>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
            <%= f.label :phone_number, "電話番号（ハイフンなし）", class: "control-label" %>
          </div>
            <%= f.text_field :phone_number %>
        </div>

        <div class="actions">
            <%= f.submit "編集内容を保存する", class: "btn btn-primary col-xs-offset-3" %>
           <%= link_to "退会する", quit_path, class: "small btn btn-danger col-xs-offset-3" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
