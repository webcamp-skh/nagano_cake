<h3>注文情報入力</h3>

<div class="order-form">
  <%= form_with(model: @order, local: true) do |f| %>

    <p>支払方法<p>
    <div class="field">
      <%= f.radio_button :payment_method, 0 %>
      <%= f.label :payment_method, "クレジットカード", value: 0 %><br>
      <%= f.radio_button :payment_method, 1 %>
      <%= f.label :payment_method, "銀行振込", value: 1 %>
    </div>

    <p>お届け先<p>
    <div class="field">
      <div class="user-address">
        <%= f.radio_button :user_address, 0 %>
        <%= f.label :user_address, "ご自身の住所", value: 0 %><br>
        <%= "#{current_user.postal_code} #{current_user.address}" %><br>
        <%= "#{current_user.last_name}#{current_user.first_name}" %>
      </div>

        <%= f.radio_button :user_address, 1 %>
        <%= f.label :user_address, "登録済住所から選択", value: 1 %><br>

        <%= f.radio_button :user_address, 2 %>
        <%= f.label :user_address, "新しいお届け先", value: 2 %><br>
    </div>

  <% end %>
</div>