<div class="row">
  <h3 class="title">注文情報確認</h3>

  <div class="order-item-list">
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% current_user.cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :image_id, size: "70x60", fallback: "no_image.jpg" %><%= cart_item.item.name %></td>
            <td><%= cart_item.item.price * 110 / 100 %></td>
            <td><%= cart_item.item_count %></td>
            <td><%= cart_item.item.price * cart_item.item_count * 110 / 100 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="order-price-list">
    <table>
      <thead>
        <tr>
          <th>送料</th>
          <th>商品合計</th>
          <th>請求金額</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @order.shipping %></td>
          <td><%= @item_total_price %></td>
          <td><%= @order.billing_amount %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="payment-method-confirm">
    <h3>支払方法</h3>
    <% if @order.payment_method == "credit" %>
      <%= "クレジットカード" %>
    <% else %>
      <%= "銀行振込" %>
    <% end %>
  </div>

  <div class="address-confirm">
    <h3>お届け先</h3>
    <%= "#{@order.ordered_postal_code} #{@order.ordered_address}" %><br>
    <%= @order.ordered_receiver_name %>
  </div>

  <div class="order-form">
    <%= form_with(model: @order, local: true) do |f| %>
      <%= f.hidden_field :user_id, value: @order.user_id %>
      <%= f.hidden_field :payment_method, value: @order.payment_method %>
      <%= f.hidden_field :billing_amount, value: @order.billing_amount %>
      <%= f.hidden_field :ordered_postal_code, value: @order.ordered_postal_code %>
      <%= f.hidden_field :ordered_address, value: @order.ordered_address %>
      <%= f.hidden_field :ordered_receiver_name, value: @order.ordered_receiver_name %>
      <div class="actions">
        <%= f.submit "購入を確定する", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>

</div>
