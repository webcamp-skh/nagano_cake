<div class="row">
  <h3 class="title">注文履歴詳細</h3>
</div>

<div class="row">
  <div class="order-info-list col-xs-7">
    <h4 class="sub-title">注文情報</h4>
    <table class="table">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order.ordered_postal_code %><br>
          <%= @order.ordered_address %><br>
          <%= @order.ordered_receiver_name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.order_status %></td>
      </tr>
    </table>
  </div>

  <div class="billing-info-list col-xs-3">
    <h4 class="sub-title">請求情報</h4>
    <table class="table">
      <tr>
        <th>商品合計</th>
        <td><%= @item_total_price.to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.shipping.to_s(:delimited) %>円</td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= @order.billing_amount.to_s(:delimited) %>円</td>
      </tr>
    </table>
  </div>
</div>

<div class="row">
  <div class="order-item-list col-xs-8">
    <h4 class="sub-title">注文内容</h4>
    <table class="table">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.ordered_price.to_s(:delimited) %>円</td>
            <td><%= order_item.item_count %></td>
            <td><%= (order_item.ordered_price * order_item.item_count).to_s(:delimited) %>円</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
