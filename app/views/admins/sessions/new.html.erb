<div class="container">
  <div class="row">
    <p class="login-title col-xs-offset-2">管理者ログイン</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-horizontal">
      <div class="form-group">
        <div class="col-xs-offset-3">
          <%= f.label :メールアドレス, class: "control-label" %>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-offset-5 col-xs-6" %>
      </div>

      <div class="form-group">
        <div class="col-xs-offset-3">
          <%= f.label :パスワード, class: "control-label" %>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-offset-5 col-xs-6" %>
      </div>
      <div class="actions">
        <%= f.submit "ログイン", class: "new-btn btn btn-primary col-xs-offset-5" %>
      </div>
    </div>
    <% end %>

  </div>
</div>
