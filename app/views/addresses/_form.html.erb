<%= form_for address, :url => {:action => :create} do |f| %>
	<div class="form-horizontal">

    <div class="form-group">
      <div class="col-xs-3">
         <%= f.label :"郵便番号（ハイフンなし）", class: "control-label" %>
       </div>
          <%= f.text_field :postal_code %>
    </div>

     <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :住所, class: "control-label" %>
        </div>
          <%= f.text_field :address, class: "col-xs-4" %>
     </div>

     <div class="form-group">
	      <div class="col-xs-3">
	     		<%= f.label :宛名, class: "control-label" %>
	    	</div>
	     		<%= f.text_field :receiver_name %>
	      	<%= f.submit "登録する", class: "btn btn-success col-xs-offset-5" %>
	   </div>
	 </div>
<% end %>