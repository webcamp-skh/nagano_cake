<div class="container">
  <div class="row">
    <h3 class="title">新規会員登録</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-horizontal">
        <div class="form-group">
          <div class="col-sm-3">
           <%= f.label :名前 , class: "control-label" %>
         </div>
          <div class="col-xs-3">(姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class: "form-control" %></div>
         <div class="col-xs-3">(名)<%= f.text_field :first_name, autocomplete: "first_name",class: "form-control" %></div>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
           <%= f.label :フリガナ , class: "control-label" %>
         </div>
           <div class="col-xs-3">(セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name",class: "form-control" %></div>
           <div class="col-xs-3">（メイ）<%= f.text_field :first_name_kana, autocomplete: "first_name",class: "form-control" %></div>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
           <%= f.label :メールアドレス, class: "control-label" %>
          </div>
            <div class="col-xs-3"><%= f.email_field :email, autocomplete: "email",class: "form-control" %></div>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
            <%= f.label :"郵便番号（ハイフンなし）", class: "control-label" %>
          </div>
            <div class="col-xs-3"><%= f.text_field :postal_code, autocomplete: "postal_code",class: "form-control" %></div>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
           <%= f.label :住所, class: "control-label" %>
          </div>
            <div class="col-xs-6"><%= f.text_field :address, autocomplete: "address",class: "form-control" %></div>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
           <%= f.label :"電話番号（ハイフンなし）", class: "control-label" %>
          </div>
            <div class="col-xs-3"><%= f.text_field :phone_number, autocomplete: "phone_number",class: "form-control" %></div>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
          <%= f.label :"パスワード（６文字以上）", class: "control-label" %>
          </div>
            <div class="col-xs-3"><%= f.password_field :password, autocomplete: "new-password",class: "form-control" %></div>
        </div>

        <div class="form-group">
          <div class="col-xs-3">
            <%= f.label :"パスワード（確認用）", class: "control-label" %>
          </div>
            <div class="col-xs-3"><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %></div>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success center-block" %>
      </div>
    <% end %>
    <div class="login-link">
      <h3 class="title">既に登録済みの方</h3>
      <p class="login-link-text"><%= link_to "こちら",new_user_session_path, class: "kotira" %> からログインしてください。</p>
    </div>
  </div>
</div>