<div class="row">
	<div class="admin-search">
		<%= search_form_for @i, url: admin_item_search_path do |f| %>
		<%= f.text_field :name_cont, placeholder: '商品名を入力'%>
		<%= f.select :status_eq, {'発売中' => true, '売り切れ' => false}, include_blank: "販売ステータス" %>
		<%= f.submit "Search" %>
		<% end %>
	</div>
</div>
<div class = "container">
    <div class="row">
	    <div class="col-xs-9">
           <h3 class="title">商品一覧</h3>

		   <!--item一覧 -->

            <table class="table table-hover table-inverse">

			    <thead>
				    <tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜き価格</th>
						<th>ジャンル</th>
						<th>販売ステータス</th>
				    </tr>
			    </thead>
			    <tbody>
　　　　　　　　　　　　　　<% @items.each do |item| %>

				    <tr>
						<td><%= item.id %></td>
						<td>
							<%= link_to admin_item_path(item) do %>
						       <%= item.name %>
						    <% end %>
						</td>
						<td><%= item.price %>円</td>
						<td><%= item.genre.name %></td>
						<td><% if item.status ==true %>
			             <p>発売中</p>
				        <% else %>
				        <p>売り切れ</p>
				        <% end %></th>
						<% end %>
				    </tr>
			    </tbody>
		    </table>
        </div>

		   	<%= render 'index', items: @items %>
    </div>
</div>