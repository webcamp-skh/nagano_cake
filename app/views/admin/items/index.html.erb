<div class = "container">
   <div class="row">



        <div class="col-xs-9">
				<h2>商品一覧</h2>

				<!--item一覧 -->
				<table class="table table-hover table-inverse">

					<thead>
						<tr>
							<th>商品ID</th>
							<th>商品名</th>
							<th>税抜き価格</th>
							<th>ジャンル</th>
							<th>販売ステータス</th>
							<th colspan="3"></th>
						</tr>
					</thead>

					<tbody>
　　　　　　　　　　　　　　<% @items.each do |item| %>
						<tr>
							<td><%= item.id %></td>
							<td>
								<%= item.name %>
							</td>
							<td><%= item.price %></td>
							<td><%= item.genre.name %></td>
							<td><% if item.status ==true %>
				             <p>発売中</p>
					        <% else %>
					        <p>売り切れ</p>
					        <% end %></th>
							<% end %>
						</tr>
					</tbody>
				</table>
		</div>
	</div>
</div>