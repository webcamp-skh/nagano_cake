<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

    <div class="row">
      <h3 class="title">商品一覧</h3>
    </div>

    <div class="new-item-link text-right">
      <%= link_to "商品新規登録", new_admin_item_path, class: "btn btn-primary" %>
    </div>

		<table class="table">
			<thead>
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>販売ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% items.each do |item| %>
					<tr>
						<td><%= item.id %></td>
						<td><%= link_to item.name, admin_item_path(item) %></td>
						<td><%= item.price.to_s(:delimited) %></td>
						<td><%= item.genre.name %></td>
						<% if item.status == true %>
							<td>販売中</th>
						<% else %>
							<td class="font-red">販売停止中（売切れ）</td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>

  </div>
</div>
