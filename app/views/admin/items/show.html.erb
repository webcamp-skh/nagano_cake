
<div class="container">
　　 <div class="row">
       <div class="col-xs-4">
　　　　<h3 class="title">商品詳細</h3>
       </div>
    </div>
</div>


    <div class="container">
　　     <div class="row">
		         <div class="col-xs-3">
			　　　　<%= attachment_image_tag(@item, :image, :fill, 50, 50, fallback: "no_image.jpeg") %>
				 </div>

		       　<div class="col-xs-5">
		       	　<table class="table" style="border: none;">
		       		<tbody style="border: none;">
		       			<tr style="border: none;">
		       				<th style="border: none; background-color: white;">商品名</th>
		       				<td style="border: none;"> <%= @item.name %></td>
		       			</tr>
		       			<tr style="border: none;">
		       				<th style="border: none; background-color: white;">商品説明</th>
		       				<td style="border: none;"><%= @item.description %></td>
		       			</tr>
		       			<tr style="border: none;">
		       				<th style="border: none; background-color: white;">値段</th>
		       				<td style="border: none;"><%= @item.price %>円</td>
		       			</tr>
		       			<tr style="border: none;">
		       				<th style="border: none; background-color: white;">ジャンル</th>
		       				<td style="border: none;"><%= @item.genre.name %></td>
		       			</tr>
		       			<tr style="border: none;">
		       				<th style="border: none; background-color: white;">ステータス</th>
		       				<td style="border: none;"><% if @item.status ==true %>
				                <p>発売中</p>
				                <% else %>
				                <p>売り切れ</p>
				                <% end %>
				            </td>
			            </tr>
		       		</tbody>
		       	   </table>
		       	    <%= link_to "編集", edit_admin_item_path, class: "button btn btn-success" %>
		       	</div>
		       </div>
		    </div>
		</div>
	</div>
</div>




