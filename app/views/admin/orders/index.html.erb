<div class="row">
  <h3 class="title">注文履歴一覧</h3>
</div>

<div class="row">
  <div class="admin-order-list">
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
            <td><%= "#{order.user.last_name}#{order.user.first_name}" %></td>
            <td><%= order.order_items.all.sum(:item_count) %></td>
            <td><%= order.order_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
