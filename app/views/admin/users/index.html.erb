<div class="container">
	<div class="row">
		<h3 class="title">会員一覧</h3>

		<table class="userlist col-xs-offset-3">
			<thead>
				<tr>
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
			</thead>

			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= user.id %></td>
					<td><%= link_to admin_user_path(user) do %>
						<%= user.last_name %><%= user.first_name %>
						<% end %>
					</td>
					<td><%= user.email %></td>
					<td><% if user.status == true %>
							<p>有効</p>
						<% else %>
							<p>退会</p>
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>