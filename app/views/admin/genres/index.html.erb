<div class="row">
  <h3 class="title">ジャンル一覧・追加</h3>
</div>

<div class="row">
  <div class="genre-form">
		<%= form_for [:admin, @genre] do |f| %>
			<%= f.label :name, "ジャンル" %>
			<%= f.text_field :name, class: "form-control", style: "width: 250px;" %>
			<%= f.radio_button :status, true, checked: true %>
			<%= f.label :status, "有効", value: true, class: "radio-label label-size" %>
			<%= f.radio_button :status, false %>
			<%= f.label :status, "無効", value: false, class: "radio-label label-size" %>
			<%= f.submit "追加", class: "left-space btn btn-primary" %>
		<% end %>
	</div>

	<div class="col-xs-4">
		<table class="table">
			<thead>
				<tr>
					<th>ジャンル</th>
					<th>状態</th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<% if genre.status == true %>
							<td>有効 <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-default" %></td>
						<% else %>
							<td>無効 <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-danger" %></td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

</div>

