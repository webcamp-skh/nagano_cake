
<div class = "container">
     <div class="row">
     	<div class="col-xs-12">
     		<%= link_to "カートを空にする", cart_all_destroy_path, method: :delete %>
			<table class="table">
			 <thead>
				<tr>
				<th></th>
				<th>商品</th>
				<th>単価（税込）</th>
				<th>数量</th>
				<th>小計</th>
				</tr>
			</thead>

			<tbody>
				<% @cart_items.each do |cart_item| %>
				<tr>
				<td><%= attachment_image_tag(@item, :image_id, :fill, 50, 50, fallback: "no_image.jpeg") %></td>
				<td><%= cart_item.item.name %></td>
				<td><%= cart_item.item.price %></td>
				<td><%= form_for cart_item do |f| %>
				<%= f.select :item_count,(1..50) %>
				<%= f.submit "変更する"%>
				<% end %></td>
				<td><%= link_to "削除", cart_item_path(cart_item), method: :delete %>

				<% end %>
				</td>

				<td>
				</tr>

			</tbody>
			</table>
</div>
   </div></div></div>
