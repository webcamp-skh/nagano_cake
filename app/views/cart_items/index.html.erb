<% if @cart_items.count == 0 %>

  <div class="no-cart text-center">
    <h3>ショッピングカートに商品がありません。</h3>
    <%= link_to "ショッピングを続ける", items_path, class: "btn btn-lg btn-primary" %>
  </div>

<% else %>

  <div class="row">
    <h3 class="title">ショッピングカート</h3>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="cart-destroy text-right">
        <%= link_to "カートを空にする", cart_all_destroy_path, method: :delete, class: "btn btn-danger" %>
      </div>

      <table class="table">
      	<thead>
      		<tr>
      			<th>商品名</th>
      			<th>単価(税込)</th>
      			<th>数量</th>
      			<th>小計</th>
      			<th></th>
      		</tr>
      	</thead>
      	<tbody>
          <% total_price = 0 %>
          <% @cart_items.each do |cart_item| %>
            <% tax_price = cart_item.item.price * 110 / 100 %>
            <% subtotal_price = tax_price * cart_item.item_count %>
            <tr>
              <td>
                <%= attachment_image_tag(cart_item.item, :image, size: "70x50", fallback: "no_image.jpeg") %>&nbsp;&nbsp;
                <%= cart_item.item.name %>
              </td>
              <td><%= tax_price.to_s(:delimited) %>円</td>
              <td>
                <%= form_for cart_item do |f| %>
                  <%= f.select :item_count,(1..50) %>
                  <%= f.submit "変更する", class: "btn btn-primary" %>
                <% end %>
              </td>
              <td><%= subtotal_price.to_s(:delimited) %>円</td>
              <td><%= link_to "削除", cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
            </tr>
            <% total_price += subtotal_price  %>
          <% end %>
      	</tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="pull-left col-xs-9">
      <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
    </div>

  	<div class="pull-right col-xs-3">
      <table class="table">
        <tr>
          <th>合計金額</th>
  				<td><%= total_price.to_s(:delimited) %></td>
  			</tr>
  		</table>
  	</div>
  </div>

  <div class="text-center">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-lg btn-success" %>
  </div>

<% end %>

