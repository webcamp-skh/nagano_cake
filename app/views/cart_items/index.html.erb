
<div class = "container">
     <div class="row">
     	<div class="col-xs-12">
     		<h2>ショッピングカート</h2>
　　          <p class="text-right">
     		   <%= link_to "カートを空にする", cart_all_destroy_path, method: :delete,class: "button btn btn-danger" %></p>

			<table class="table table-bordered">
			    <thead>
				<tr>
					<th></th>
					<th>商品名</th>
					<th>単価（税込）</th>
					<th>数量</th>
					<th>小計</th>
					<th></th>
			    </tr>
			    </thead>

			<tbody>

				<% sum = 0 %>
				<% @cart_items.each do |cart_item| %>

			<tr>
				<td><%= attachment_image_tag(@item, :image_id, :fill, 50, 50, fallback: "no_image.jpeg") %></td>
				<td><%= cart_item.item.name %></td>

				<% tax_price = (cart_item.item.price * 110 / 100.0).ceil %>
				<td><%= tax_price %></td>

				<td><%= form_for cart_item do |f| %>
				<%= f.select :item_count,(1..50) %>
				<%= f.submit "変更する"%>
				<% end %></td>

				<% subtotal_price = tax_price * cart_item.item_count %>
				<td>
					<%= subtotal_price %></td>
				<td><%= link_to "削除", cart_item_path(cart_item), method: :delete,class: "button btn btn-danger" %></td>
				<% sum += subtotal_price  %></td>

				<% end %>
			</tr>


			</tbody>
			</table>
                <%= link_to "買い物を続ける",items_path, class: "button btn btn-primary" %>

			    <%= link_to "情報入力画面に進む", new_order_path, class: "button btn btn-success" %>
				合計金額<%= sum %>

        </div>
    </div>
</div>

